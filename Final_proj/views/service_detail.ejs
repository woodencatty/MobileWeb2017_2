<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ISDM시스템 - 상세 서비스</title>
    <!--Basic CSS -->
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <link type="text/css" rel="stylesheet" href="../css/wheelcolorpicker.css" />

    <!-- Bootstrap Core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="../vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="../dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="../vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script>
        $('.colorpicker').colorpicker('rgb');


    </script>
</head>

<body>

    <div id="wrapper">

     
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand hide_on_phone">ISDM 시스템(Integrated Smart Device Management System)</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <a class="navbar-brand ">환영합니다! <%= username %>님!</a>
            
                <button type="button" class="navbar-toggle inline_on_phone" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <li class="dropdown">
                
                    <a class="dropdown-toggle " data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                
                    <ul class="dropdown-menu dropdown-user ">
                        <li><a href="/profile"><i class="fa fa-user fa-fw"></i>  프로필</a>
                        </li>
                        <li><a href="/change"><i class="fa fa-gear fa-fw"></i> 정보수정</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="/logout"><i class="fa fa-sign-out fa-fw"></i> 로그아웃</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="/device">
                                <i class="fa fa-th-list fa-fw"></i>기기 관리</a>
                        </li>
                        <li>
                            <a href="/service">
                                <i class="fa fa-dashboard fa-fw"></i>서비스 관리</a>
                        </li>
                        <li>
                            <a href="/account">
                                <i class="fa fa-user fa-fw"></i>계정 설정</a>
                        </li>
                        <li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header smaller_on_phone"><%= userid %>의 <%= data[0].deviceid %> 정보</h1>
                    </div>

                    <div class="col-lg-12">
                        <div class="row">
                            <!-- /.col-lg-12 -->
                        </div>

                        <div class="panel panel-default">
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>기기 이름</th>
                                        <th class="hide_on_phone">기기 IP주소</th>
                                        <th class="hide_on_phone">기기 종류</th>
                                        <th class="hide_on_phone">기기 버전</th>
                                        <th class="hide_on_phone">사용 여부</th>
                                        <th class="hide_on_phone">기기 소유자</th>
                                        <th class="hide_on_phone">기기 설명</th>
                                        <th class="hide_on_phone">지원 기능</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach(function (item, index) { %>
                                            <tr class="odd gradeX">
                                              <td><%= item.deviceid %></td>
                                            <td class="hide_on_phone"><%= item.ipv4 %></td>
                                            <td class="hide_on_phone"><%= item.sort %></td>
                                            <td class="hide_on_phone"><%= item.version %></td>
                                            <td class="hide_on_phone"><%= item.activated %></td>
                                            <td class="hide_on_phone"><%= item.owner %></td>
                                            <td class="hide_on_phone"><%= item.describe %></td>
                                            <td class="hide_on_phone"><%= item.function %></td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->

                        <div class="panel panel-default">
                            <!-- /.panel-heading -->
                            <div class="panel-heading">
                            <div class="col-lg-12">
                                <h3 class="page-header">
                                  기기 서비스 조작
                                    </h3>
                            </div>
                            </div>
                            <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>서비스명</th>
                                            <th>속성</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="odd gradeX">
                                            <td>
                                            LED
                                            </td>
                                            <td>
                                            <form id="LED" method="post">
                                                    <input type="text" data-wheelcolorpicker="" data-wcp-format="rgb" name="rgb">
                                                        <input type="hidden" value="setLED" name="type">
                                                        <input type="submit" value="색 설정하기">
                                                    </form>
                                            </td>
                                        </tr>
                                        <tr class="odd gradeX">
                                            <td>TEMP</td>
                                            <td>현재 온도는 : <%= temp %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>

    <!-- Custom colorPicker -->
    <script type="text/javascript" src="../dist/js/jquery.wheelcolorpicker.js"></script>
</body>

</html>